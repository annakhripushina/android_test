<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="logo">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/sk_modernist_bold</item>
    </style>

    <style name="gradeCnt">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#45454D</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="StarsRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/stars_ratingbar</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="tag">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#44A9F4</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="description">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#B3EEF2FB</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="review_rating">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#EEF2FB</item>
        <item name="android:fontFamily">@font/sk_modernist_bold</item>
    </style>

    <style name="rating">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/sk_modernist_bold</item>
    </style>

    <style name="reviews_cnt">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#A8ADB7</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="auguste_con">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="date">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#66FFFFFF</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="once_you_st">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#A8ADB7</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="install">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#050B18</item>
        <item name="android:fontFamily">@font/sk_modernist_bold</item>
    </style>


</resources>