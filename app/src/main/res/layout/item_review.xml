<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/userImageCard"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:cardCornerRadius="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="36dp"
            android:layout_height="36dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        app:layout_constraintStart_toEndOf="@id/userImageCard"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/auguste_con"
        android:gravity="bottom"
        android:lineSpacingExtra="3.2sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintStart_toEndOf="@id/userImageCard"
        android:textAppearance="@style/date"
        android:gravity="bottom"
        android:lineSpacingExtra="2.4sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="12dp"
        android:gravity="top"
        android:lineSpacingExtra="6sp"
        android:textAppearance="@style/once_you_st"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userImageCard"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>